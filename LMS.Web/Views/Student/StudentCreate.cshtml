@model StudentDto

<form asp-action="StudentCreate">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Create Student</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Student Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Group</label>
            </div>
            <div class="col-10 pb-3">
                <select class="form-control" asp-items="ViewBag.Groups" asp-for="GroupId">
                    <option class="" disabled selected>--Select Group--</option>
                </select>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="StudentIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-danger form-control" />
            </div>

        </div>

        <div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}